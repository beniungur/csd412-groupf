@model IEnumerable<Plant_Management_System.Models.PropagationEvent>

@{
    ViewData["Title"] = "Index";
}

<h3>Propagations</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParentPlant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PropDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParentPlant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
