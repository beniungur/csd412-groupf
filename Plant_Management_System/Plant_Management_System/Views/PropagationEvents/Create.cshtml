@model Plant_Management_System.Models.PropEventView

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PropagationEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Parent Plant</label>
                <select asp-for="ParentPlant" class="form-control">
                    @foreach (var plant in Model.plantList)
                    {
                        <option value=@plant.PlantId>@plant.Name</option>}
                </select>
            </div>


            <div class="form-group">
                <label asp-for="prop.PropDate" class="control-label"></label>
                <input asp-for="prop.PropDate" class="form-control" />
                <span asp-validation-for="prop.PropDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
