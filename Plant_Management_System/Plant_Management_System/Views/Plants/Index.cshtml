@model IEnumerable<Plant_Management_System.Models.Plant>

@{
    ViewData["Title"] = "Index";
}

<h3>Your Plant List!</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WaterNeeds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LightNeeds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrowthMedium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PotType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastRepotted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaterNeeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LightNeeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrowthMedium)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PotType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rarity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastRepotted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlantId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlantId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlantId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
